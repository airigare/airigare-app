<mvc:View
  xmlns:l="sap.ui.layout"
  xmlns:core="sap.ui.core"
  xmlns:html="http://www.w3.org/1999/xhtml"
  controllerName="sap.ui.demo.wt.controller.InputPanel"
  xmlns="sap.m"
  xmlns:wt="sap.ui.demo.wt.control"
  xmlns:mvc="sap.ui.core.mvc">
  <l:VerticalLayout
    width="100%" >
    <l:content>
     <Panel 
      headerText="{i18n>inputPanelTitle}"
      class="sapUiResponsiveMargin"
      width="auto"
      >
      <FlexBox alignItems="Start">
        <Input
          value="{/input/result}"
          description="Result is: {/input/result}"
          valueLiveUpdate="true"
          width="100%"
          class="sapUiSmallMarginEnd" >
        </Input>
        <Button
          text="{i18n>showPredictButtonText}"
          press="onPredict"
          class="sapUiLargeMarginEnd"
          width="100%"
          >
        </Button>
      </FlexBox>
      <wt:Slider class="sapUiSmallMarginBeginEnd"
        value = "{/input/result}"/>
    </Panel>
  </l:content>
</l:VerticalLayout>
</mvc:View>