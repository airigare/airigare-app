      <wt:Slider class="sapUiLargeTinyBottom"
        value = "{wd>/weather/temperature}"
        desc = "{i18n>inputTemperature} {wd>/weather/temperature}"
        min = "10"
        max = "35" />
        <wt:Slider class="sapUiLargeTinyBottom"
          value = "{wd>/weather/pressure}"
          desc = "{i18n>inputPressure} {wd>/weather/pressure}"
          min = "900"
          max = "1050"/>
                  <wt:Slider class="sapUiLargeTinyBottom"
          value = "{wd>/weather/wind}"
          desc = "{i18n>inputWind} {wd>/weather/wind}"
          min = "0"
          max = "30"/>
          <wt:Slider class="sapUiLargeTinyBottom"
          value = "{wd>/weather/rain}"
          desc = "{i18n>inputRain} {wd>/weather/rain}"
          min = "0"
          max = "30"/>
          <wt:Slider class="sapUiLargeTinyBottom"
          value = "{wd>/weather/humidity}"
          desc = "{i18n>inputHumidity} {wd>/weather/humidity}"
